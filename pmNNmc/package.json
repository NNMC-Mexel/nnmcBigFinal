{
  "name": "nnmc-it-board",
  "version": "1.0.0",
  "private": true,
  "description": "NNMC IT Project Board - Full Stack Application",
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:kpi": "cd server-kpi && npm run dev",
    "dev:all": "npm-run-all --parallel dev:frontend dev:server dev:kpi",
    "dev:servers": "npm-run-all --parallel dev:server dev:kpi",
    "build": "npm run build:server && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:server": "cd server && npm run build",
    "build:kpi": "cd server-kpi && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../server && npm install && cd ../server-kpi && npm install",
    "start": "cd server && npm run start",
    "start:kpi": "cd server-kpi && npm run start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=20.0.0 <=24.x.x",
    "npm": ">=6.0.0"
  }
}
